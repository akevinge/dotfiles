#!/bin/bash

alias open='xdg-open'
alias wifi='nmcli device wifi'
alias flameshot='QT_SCREEN_SCALE_FACTORS='' /usr/bin/flameshot'
alias launch='gtk-launch'

alias g='git'
source /usr/share/bash-completion/completions/git # git completions for alias
complete -o default -o nospace -F __git_wrap__git_main g

alias c='code'

alias hibernate="sudo systemctl hibernate"

# Apps
# Assumes ~/.local/share/applications/[name].desktop
alias google-calendar="launch google-calendar"
alias notion="launch notion"
alias teams="launch teams"
alias gmail="launch gmail"
alias outlook="launch outlook"

